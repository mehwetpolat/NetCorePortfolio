@model List<EntityLayer.Concrete.Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

@{
    string color = "badge badge-danger";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            if(item.Status.Contains("Yeni"))
                            {
                                color = "badge badge-danger";
                            }
                            if (item.Status.Contains("Aktif"))
                            {
                                color = "badge badge-info";
                            }
                            if (item.Status.Contains("Bitti"))
                            {
                                color = "badge badge-success";
                            }
                            if (item.Status.Contains("Yapılmadı"))
                            {
                                color = "badge badge-warning";
                            }
                            <tr>
                                <th>@item.Id</th>
                                <td>@item.Title</td>
                                <td>@(((DateTime)@item.Date).ToString("dd-MMM-yyyy"))</td>
                                <td><label class="@color">@item.Status</label></td>
                                <td><a href="/Writer/Default/AnnouncementDetails/@item.Id" class="btn btn-outline-primary">Detaylar</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>