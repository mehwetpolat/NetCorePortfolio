@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<h2>Mesaj Detayları</h2>
<br />
<form class="form-group">
    @Html.HiddenFor(x => x.WriterId, new {@class = "form-control"})
    @Html.Label("Alıcı")
    @Html.TextBoxFor(x => x.ReceiverName, new { @class = "form-control" })
    <br />
    @Html.Label("Alıcının Mail Adresi")
    @Html.TextBoxFor(x => x.Receiver, new { @class = "form-control" })
    <br />
    @Html.Label("Başlık")
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
    <br />
    @Html.Label("İçerik")
    @Html.TextAreaFor(x => x.MessageContent,10,3, new { @class = "form-control" })
</form>