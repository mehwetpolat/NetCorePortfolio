@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "ReceiverMessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h2>Giden Mesaj Detayları</h2>
<br />
<form class="form-group">
    @Html.HiddenFor(x => x.WriterId, new { @class = "form-control" })
    @Html.Label("Gönderen")
    @Html.TextBoxFor(x => x.SenderName, new { @class = "form-control" })
    <br />
    @Html.Label("Gönderenin Mail Adresi")
    @Html.TextBoxFor(x => x.Sender, new { @class = "form-control" })
    <br />
    @Html.Label("Başlık")
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
    <br />
    @Html.Label("İçerik")
    @Html.TextAreaFor(x => x.MessageContent, 10, 3, new { @class = "form-control" })
</form>