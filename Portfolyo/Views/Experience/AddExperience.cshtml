@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        @using (Html.BeginForm("AddExperience", "Experience", FormMethod.Post))
        {

            <div class="card-body">
                <h4 class="card-title">Deneyim Ekleme Sayfası</h4>

                <form class="forms-sample">
                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" class="form-control" name="ExperienceName">
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        <input type="text" class="form-control" name="ExperienceDate">
                    </div>
                    <div class="form-group">
                        <label>Görsel Yolu</label>
                        <input type="text" class="form-control" name="ExperienceImageUrl">
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea class="form-control" name="ExperienceDesription" rows="6"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">İptal</button>
                </form>

            </div>

        }
    </div>
</div>

