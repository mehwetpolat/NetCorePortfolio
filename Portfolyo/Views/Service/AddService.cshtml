@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Deneyim Ekleme Sayfası</h3>
</div>
@using (Html.BeginForm("AddService", "Service", FormMethod.Post))
{
    <br />
    @Html.Label("Hizmet Başlığı")
    @Html.TextBoxFor(x => x.ServiceTitle, new { @class = "form-control" })
    <br />
    <label>Resim Yolu</label>
    @Html.TextBoxFor(x => x.ServiceImageUrl, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>
}