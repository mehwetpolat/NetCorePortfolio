@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateService", "Service", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hizmet Güncelleme Sayfası</h4>
                <form class="forms-sample">
                    @Html.HiddenFor(x => x.ServiceId)
                    <br />
                    @Html.Label("Hizmet Başlığı")
                    @Html.TextBoxFor(x => x.ServiceTitle, new { @class = "form-control" })
                    <br />
                    <label>Resim Yolu</label>
                    @Html.TextBoxFor(x => x.ServiceImageUrl, new { @class = "form-control" })
                    <br />
                    <button class="btn btn-success">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
}