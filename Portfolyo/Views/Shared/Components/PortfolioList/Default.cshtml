@model List<EntityLayer.Concrete.Portfolio>

<div class="section px-2 px-lg-4 pt-5" id="portfolio">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Portfolyom </h2>
        </div>
        <div class="grid bp-gallery pb-3" data-aos="zoom-in-up" data-aos-delay="70">
            <div class="grid-sizer"></div>

            @foreach (var item in Model)
            {
                <div class="grid-item">
                    <a href="@item.PortfolioProjectUrl">
                        <figure class="portfolio-item">
                            <img src="@item.PortfolioImageUrl" data-bp="@item.PortfolioImageUrl" />
                            <figcaption>
                                <h4 class="h5 mb-0">@item.PortfolioName</h4>
                                <div>@item.PortfolioProjectUrl</div>
                            </figcaption>
                        </figure>
                    </a>
                </div>
            }
        </div>
    </div>
</div>