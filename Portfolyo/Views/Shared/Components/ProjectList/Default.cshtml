@model List<EntityLayer.Concrete.Portfolio>
<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Proje Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Resim Url</th>
                                <th>Proje Adı</th>
                                <th>Proje Url</th>
                                <th>Fiyat</th>
                                <th>Tamamlanma</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <td>@item.PortfolioId</td>
                                    <td><img src="@item.PortfolioImageUrl" /></td>
                                    <td>@item.PortfolioName</td>
                                    <td>@item.PortfolioProjectUrl</td>
                                    <td>@item.Price</td>
                                    <td>%@item.Value</td>
                                    <td><a href="/Portfolio/UpdatePortfolio/@item.PortfolioId">Projeye Git</a></td>
                                </tr>
                            }
                           
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>