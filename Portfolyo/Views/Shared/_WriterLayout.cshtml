@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<!-- head partial -->
@await Html.PartialAsync("/Areas/Writer/Views/Default/_HeadPartial.cshtml")

<body>
    <div class="container-scroller">

        <!-- navbar partial -->
        @await Html.PartialAsync("/Areas/Writer/Views/Default/_NavBarPartial.cshtml")

        <div class="container-fluid page-body-wrapper">
            
            
            <!-- sidebar partial -->
            @await Html.PartialAsync("/Areas/Writer/Views/Default/_SideBarPartial.cshtml")

            <div class="main-panel">
                <div class="content-wrapper">
                        @RenderBody()
                </div>

                <!-- footer partial -->
                @await Html.PartialAsync("/Areas/Writer/Views/Default/_FooterPartial.cshtml")

            </div>
        </div>
    </div>

    <!-- script partial -->
    @await Html.PartialAsync("/Areas/Writer/Views/Default/_ScriptPartial.cshtml")
    
</body>

</html>